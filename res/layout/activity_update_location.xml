<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.museumaplication.UpdateLocationActivity" >
	
    <EditText 
        android:id="@+id/updateLocationID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"/>
    <EditText 
        android:id="@+id/updateLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateLocationID"/>
    <EditText 
        android:id="@+id/updateSurface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateLocationName"/>
    <EditText 
        android:id="@+id/updateState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateSurface"/>
    <EditText 
        android:id="@+id/updateLeasePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateState"/>
    <EditText 
        android:id="@+id/updateCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateLeasePrice"/>
    <Button 
        android:id="@+id/updateLocationOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="updateLocation"
        android:text="OK"
        android:layout_below="@+id/updateCountry"/>
    
    
    

</RelativeLayout>
