<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.museumaplication.UpdateUsersActivity" >

    <EditText 
        android:id="@+id/etUpdateUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/tvUpdateUserNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/etUpdateUserID"/>
    <EditText 
        android:id="@+id/etUpdateUsersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUpdateUserNAME"/>
    <TextView 
        android:id="@+id/tvUpdateUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@+id/etUpdateUsersName"/>
    <EditText 
        android:id="@+id/etUpdateUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUpdateUsername"/>
    <TextView 
        android:id="@+id/tvUpdatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/etUpdateUsername"/>
    <EditText 
        android:id="@+id/etUpdatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUpdatePassword"/>
    <TextView 
        android:id="@+id/tvUpdateIsAdministrator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrator"
        android:layout_below="@+id/etUpdatePassword"/>
    <EditText 
        android:id="@+id/etUpdateIsAdministrator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUpdateIsAdministrator"/>
    
    <Button 
        android:id="@+id/buttonUpdateUsersOK"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="updateUsers"
        android:text="OK"
        android:layout_below="@+id/etUpdateIsAdministrator"/>
    
    

</RelativeLayout>
