<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.museumaplication.AddBuyersActivity" 
    android:background="@drawable/add">

    <TextView
        android:id="@+id/twAddBuyersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name:" />
    <EditText 
        android:id="@+id/etAddBuyersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twAddBuyersName"/>
    <TextView
        android:id="@+id/twAddBuyersSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Surname:" 
        android:layout_below="@+id/etAddBuyersName"/>
    <EditText 
        android:id="@+id/etAddBuyersSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twAddBuyersSurname"/>
    <TextView
        android:id="@+id/twAddBuyersAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Address:" 
        android:layout_below="@+id/etAddBuyersSurname"/>
    <EditText 
        android:id="@+id/etAddBuyersAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twAddBuyersAddress"/>
    <TextView
        android:id="@+id/twAddBuyersCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Country:" 
        android:layout_below="@+id/etAddBuyersAddress"/>
    <EditText 
        android:id="@+id/etAddBuyersCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twAddBuyersCountry"/>
    <Button 
        android:id="@+id/buttonAddBuyersOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:onClick="addBuyers"
        android:layout_below="@+id/etAddBuyersCountry"/>
    <Button 
        android:id="@+id/buttonAddBuyerCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:onClick="cancel"
        android:layout_below="@+id/buttonAddBuyersOK"/>
    
    
    
    
    

</RelativeLayout>
